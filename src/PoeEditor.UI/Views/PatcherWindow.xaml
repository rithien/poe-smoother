                                               Text="{Binding GiIndirectLight, StringFormat='{}{0:F2}'}"
                                               Foreground="{StaticResource TextBrush}"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
