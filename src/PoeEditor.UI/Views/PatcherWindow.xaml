                            </StackPanel>
                        </Border>

                        <!-- Other Performance Patchers from ItemsControl -->
                        <ItemsControl ItemsSource="{Binding Patchers}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource SurfaceBrush}" 
                                CornerRadius="8" 
                                Margin="0,0,0,12" 
                                Padding="16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <CheckBox Grid.Column="0" 
                                          IsChecked="{Binding IsEnabled}" 
                                          VerticalAlignment="Center"
                                          Margin="0,0,16,0">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="{StaticResource TextBrush}"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"/>
                                        <Border Background="#353550" 
                                                CornerRadius="4" 
                                                Padding="8,2" 
                                                Margin="12,0,0,0"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Category}" 
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       FontSize="11"/>
                                        </Border>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}" 
                                               Foreground="{StaticResource TextMutedBrush}"
                                               TextWrapping="Wrap"
                                               FontSize="12"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="16,0,0,0">
                                    <Border CornerRadius="4" Padding="10,4">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#2D5A3D"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ImpactLevel}" Value="9">
                                                        <Setter Property="Background" Value="#5A2D2D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ImpactLevel}" Value="8">
                                                        <Setter Property="Background" Value="#5A2D2D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ImpactLevel}" Value="7">
                                                        <Setter Property="Background" Value="#5A4D2D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ImpactLevel}" Value="6">
                                                        <Setter Property="Background" Value="#5A4D2D"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ImpactLevel}" Value="5">
                                                        <Setter Property="Background" Value="#5A4D2D"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding ImpactBadge}" 
                                                   FontSize="11"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                    <TextBlock Text="âœ“ Applied"
                                               Foreground="{StaticResource SuccessBrush}"
                                               FontSize="10"
                                               HorizontalAlignment="Center"
                                               Margin="0,4,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsApplied}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="âš  No Backup"
                                               Foreground="{StaticResource WarningBrush}"
                                               FontSize="10"
                                               HorizontalAlignment="Center"
                                               Margin="0,4,0,0"
                                               ToolTip="Patch detected but no backup exists. Verify game files before patching.">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDirty}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="âœ— Failed" 
                                               Foreground="#F38BA8"
                                               FontSize="10"
                                               HorizontalAlignment="Center"
                                               Margin="0,4,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFailed}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </StackPanel>
                </Expander>

                <!-- ===== PARTICLE MODS GROUP ===== -->
