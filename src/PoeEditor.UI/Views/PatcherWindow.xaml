<Window x:Class="PoeEditor.UI.Views.PatcherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:PoeEditor.UI.Converters"
        mc:Ignorable="d"
        Title="ðŸ”§ Performance Patches" Height="850" Width="1000"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E2E"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <!-- Converters -->
        <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
        
        <!-- Dark Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1E2E"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="#2A2A3E"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#7C3AED"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="TextBrush" Color="#CDD6F4"/>
        <SolidColorBrush x:Key="TextMutedBrush" Color="#6C7086"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#45475A"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#A6E3A1"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#F9E2AF"/>
        <SolidColorBrush x:Key="DangerBrush" Color="#F38BA8"/>
        
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#353550"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="Performance Optimizations" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextBrush}"/>
                <TextBlock Text="Select optimizations to apply to your POE game files. Changes are applied directly to the archive." 
                           Foreground="{StaticResource TextMutedBrush}"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
        <!-- Patcher List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>

                <!-- ===== VISUAL MODS GROUP ===== -->
                <Expander IsExpanded="False" Margin="0,0,0,16">
                    <Expander.Header>
                        <Grid Width="900">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="ðŸŽ¨ Visual Mods"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="(Camera, Brightness, Colors)"
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"/>
                            </StackPanel>
                            
                            <CheckBox Grid.Column="2"
                                      IsChecked="{Binding SelectAllVisualMods}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Margin="0,0,8,0">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>
                            <TextBlock Grid.Column="3"
                                       Text="Select All (Max)"
                                       FontSize="12"
                                       Foreground="{StaticResource AccentBrush}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontWeight="SemiBold"/>
                        </Grid>
                    </Expander.Header>
                    <StackPanel Margin="0,12,0,0">

                        <!-- Camera Zoom Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Margin="0,0,0,12"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="ðŸ“· Camera Zoom"
                                           Foreground="{StaticResource TextBrush}"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Modify camera zoom level. Affects character.ot and all .ot/.otc files."
                                           Foreground="{StaticResource TextMutedBrush}"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Margin="0,0,0,12"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Disabled"
                                                 GroupName="ZoomLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedZoomLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=0}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="x1 (Default)"
                                                 GroupName="ZoomLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedZoomLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="x2 (Zoomed Out)"
                                                 GroupName="ZoomLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedZoomLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=2}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="x3 (Max Zoom)"
                                                 GroupName="ZoomLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedZoomLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=3}"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="âœ“ Applied"
                                               Foreground="{StaticResource SuccessBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Margin="0,0,12,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsZoomApplied}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="âš  No Backup"
                                               Foreground="{StaticResource WarningBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               ToolTip="Patch detected but no backup exists. Verify game files before patching.">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsZoomDirty}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Brightness Settings -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Margin="0,0,0,12"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="â˜€ï¸ Brightness Boost"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Increase global brightness by multiplying final color."
                                           Foreground="{StaticResource TextMutedBrush}"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Margin="0,0,0,12"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Disabled"
                                                 GroupName="BrightnessLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedBrightnessLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=0}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="x1.25 (+25%)"
                                                 GroupName="BrightnessLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedBrightnessLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="x1.50 (+50%)"
                                                 GroupName="BrightnessLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedBrightnessLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=2}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="x1.75 (+75%)"
                                                 GroupName="BrightnessLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedBrightnessLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=3}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="âœ“ Applied"
                                               Foreground="{StaticResource SuccessBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Margin="0,0,12,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsBrightnessApplied}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="âš  No Backup"
                                               Foreground="{StaticResource WarningBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               ToolTip="Patch detected but no backup exists. Verify game files before patching.">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsBrightnessDirty}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- SDR Scale Settings -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Margin="0,0,0,12"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="ðŸ”† SDR Scale"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Multiply SDR output brightness."
                                           Foreground="{StaticResource TextMutedBrush}"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Margin="0,0,0,12"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Disabled"
                                                 GroupName="SdrScaleLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedSdrScaleLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=0}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="x1.25 (+25%)"
                                                 GroupName="SdrScaleLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedSdrScaleLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="x1.50 (+50%)"
                                                 GroupName="SdrScaleLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedSdrScaleLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=2}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="x1.75 (+75%)"
                                                 GroupName="SdrScaleLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedSdrScaleLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=3}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="âœ“ Applied"
                                               Foreground="{StaticResource SuccessBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Margin="0,0,12,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSdrScaleApplied}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="âš  No Backup"
                                               Foreground="{StaticResource WarningBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               ToolTip="Patch detected but no backup exists. Verify game files before patching.">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSdrScaleDirty}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Gamma Settings -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Margin="0,0,0,12"
                                Padding="16">
                            <StackPanel>
                                <TextBlock Text="ðŸŒ“ Gamma"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextBrush}"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Adjust gamma curve. Lower = brighter midtones. Default is 2.2."
                                           Foreground="{StaticResource TextMutedBrush}"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Margin="0,0,0,12"/>
                                <StackPanel Orientation="Horizontal">
                                    <RadioButton Content="Disabled (2.2)"
                                                 GroupName="GammaLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedGammaLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=0}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="Bright (2.0)"
                                                 GroupName="GammaLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedGammaLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=1}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="Brighter (1.8)"
                                                 GroupName="GammaLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedGammaLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=2}"
                                                 Margin="0,0,16,0"/>
                                    <RadioButton Content="Very Bright (1.6)"
                                                 GroupName="GammaLevel"
                                                 Foreground="{StaticResource TextBrush}"
                                                 IsChecked="{Binding SelectedGammaLevel, Converter={StaticResource IntToBoolConverter}, ConverterParameter=3}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="âœ“ Applied"
                                               Foreground="{StaticResource SuccessBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Margin="0,0,12,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsGammaApplied}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="âš  No Backup"
                                               Foreground="{StaticResource WarningBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               ToolTip="Patch detected but no backup exists. Verify game files before patching.">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsGammaDirty}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Map Reveal Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Margin="0,0,0,12"
                                Padding="16">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <CheckBox IsChecked="{Binding MapRevealEnabled}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,12,0">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>
                                    <TextBlock Text="ðŸ—ºï¸ Map Reveal"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <Border Background="#2D5A3D"
                                            CornerRadius="4"
                                            Padding="8,2"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="Low Impact"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   FontSize="11"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock Text="Reveals unexplored areas on the minimap by modifying walkability and visibility shaders."
                                           Foreground="{StaticResource TextMutedBrush}"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Margin="0,0,0,8"/>

                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="âœ“ Applied"
                                               Foreground="{StaticResource SuccessBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Margin="0,0,12,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMapRevealApplied}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="âš  No Backup"
                                               Foreground="{StaticResource WarningBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               ToolTip="Patch detected but no backup exists. Verify game files before patching.">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMapRevealDirty}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Disable Vignette Section -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Margin="0,0,0,12"
                                Padding="16">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <CheckBox IsChecked="{Binding VignetteEnabled}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,12,0">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>
                                    <TextBlock Text="ðŸ”² Disable Vignette"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <Border Background="#2D5A3D"
                                            CornerRadius="4"
                                            Padding="8,2"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="Low Impact"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   FontSize="11"/>
                                    </Border>
                                </StackPanel>
                                <TextBlock Text="Removes screen edge darkening effect for clearer visuals."
                                           Foreground="{StaticResource TextMutedBrush}"
                                           TextWrapping="Wrap"
                                           FontSize="12"
                                           Margin="0,0,0,8"/>

                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="âœ“ Applied"
                                               Foreground="{StaticResource SuccessBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Margin="0,0,12,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsVignetteApplied}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="âš  No Backup"
                                               Foreground="{StaticResource WarningBrush}"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               ToolTip="Patch detected but no backup exists. Verify game files before patching.">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsVignetteDirty}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </Expander>

                <!-- ===== PERFORMANCE MODS GROUP ===== -->
                <Expander IsExpanded="False" Margin="0,0,0,16">
                    <Expander.Header>
                        <Grid Width="900">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="âš¡ Performance Mods"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock Text="(FPS Boost, Disable Effects)"
                                           FontSize="12"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"/>
                            </StackPanel>
                            
                            <CheckBox Grid.Column="2"
                                      IsChecked="{Binding SelectAllPerformanceMods}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Margin="0,0,8,0">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>
                            <TextBlock Grid.Column="3"
                                       Text="Select All"
                                       FontSize="12"
                                       Foreground="{StaticResource AccentBrush}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       FontWeight="SemiBold"/>
                        </Grid>
                    </Expander.Header>
                    <StackPanel Margin="0,12,0,0">

                        <!-- GI Settings -->
                        <Border Background="{StaticResource SurfaceBrush}"
                                CornerRadius="8"
                                Margin="0,0,0,12"
                                Padding="16">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                    <CheckBox IsChecked="{Binding GiEnabled}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,12,0">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.3" ScaleY="1.3"/>
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>
                                    <TextBlock Text="ðŸ’¡ Simplify Global Illumination"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextBrush}"/>
                                    <Border Background="#5A2D2D"
                                            CornerRadius="4"
                                            Padding="8,2"
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="High Impact"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   FontSize="11"/>
                                    </Border>
                                </StackPanel>

                                <TextBlock Text="Environment Light (Ambient)"
                                           Foreground="{StaticResource TextMutedBrush}"
                                           Margin="0,0,0,4"/>
